--// Lirabay Custom UI Full by ChatGPT
--// Features: Tabs, Script Loader, Animation, Dark Theme

if game.CoreGui:FindFirstChild("LirabayUI") then
    game.CoreGui.LirabayUI:Destroy()
end

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- Main GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LirabayUI"
ScreenGui.Parent = game.CoreGui

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 500, 0, 300)
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

-- UI Corner
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

-- Sidebar
local Sidebar = Instance.new("Frame")
Sidebar.Size = UDim2.new(0, 120, 1, 0)
Sidebar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Sidebar.Parent = MainFrame

local UICornerSide = Instance.new("UICorner")
UICornerSide.CornerRadius = UDim.new(0, 10)
UICornerSide.Parent = Sidebar

-- Tabs Buttons
local Tabs = {"Home", "Scripts", "Settings"}
local Buttons = {}

for i, name in ipairs(Tabs) do
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1, 0, 0, 40)
    Btn.Position = UDim2.new(0, 0, 0, (i - 1) * 50 + 20)
    Btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Btn.Font = Enum.Font.GothamBold
    Btn.Text = name
    Btn.TextSize = 16
    Btn.Parent = Sidebar
    Buttons[name] = Btn
end

-- Content Frames
local ContentFrames = {}
for _, name in ipairs(Tabs) do
    local Frame = Instance.new("Frame")
    Frame.Name = name.."Frame"
    Frame.Size = UDim2.new(1, -130, 1, -20)
    Frame.Position = UDim2.new(0, 130, 0, 10)
    Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Frame.Visible = false
    Frame.Parent = MainFrame
    ContentFrames[name] = Frame
end

ContentFrames["Home"].Visible = true

-- Home Tab Content
local HomeLabel = Instance.new("TextLabel")
HomeLabel.Size = UDim2.new(1, 0, 1, 0)
HomeLabel.Text = "Welcome to Lirabay UI\nCustom Roblox Hub"
HomeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
HomeLabel.TextSize = 20
HomeLabel.Font = Enum.Font.GothamBold
HomeLabel.BackgroundTransparency = 1
HomeLabel.Parent = ContentFrames["Home"]

-- Scripts Tab Content
local ScriptsFrame = ContentFrames["Scripts"]
local Scripts = {
    {Name = "Infinite Yield", URL = "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"},
    {Name = "Dex Explorer", URL = "https://raw.githubusercontent.com/infyiff/backup/main/dex.lua"},
    {Name = "Fly GUI", URL = "https://raw.githubusercontent.com/didix12/fly/main/fly.txt"},
    {Name = "ESP Script", URL = "https://raw.githubusercontent.com/HonestlyDex/DexHub/main/ESP.lua"},
    {Name = "Speed Script", URL = "https://raw.githubusercontent.com/Stefanuk12/ROBLOX/master/Speed.lua"}
}

for i, scriptData in ipairs(Scripts) do
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(0.9, 0, 0, 35)
    Btn.Position = UDim2.new(0.05, 0, 0, (i - 1) * 45 + 10)
    Btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Btn.Font = Enum.Font.Gotham
    Btn.TextSize = 16
    Btn.Text = scriptData.Name
    Btn.Parent = ScriptsFrame
    Btn.MouseButton1Click:Connect(function()
        loadstring(game:HttpGet(scriptData.URL))()
    end)
end

-- Settings Tab Content
local SettingsLabel = Instance.new("TextLabel")
SettingsLabel.Size = UDim2.new(1, 0, 1, 0)
SettingsLabel.Text = "Settings Coming Soon..."
SettingsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
SettingsLabel.TextSize = 18
SettingsLabel.Font = Enum.Font.Gotham
SettingsLabel.BackgroundTransparency = 1
SettingsLabel.Parent = ContentFrames["Settings"]

-- Tab Switch Function
local function SwitchTab(name)
    for tab, frame in pairs(ContentFrames) do
        frame.Visible = (tab == name)
    end
end

for name, Btn in pairs(Buttons) do
    Btn.MouseButton1Click:Connect(function()
        SwitchTab(name)
    end)
end

-- Animation Tween on Show
MainFrame.Position = UDim2.new(0.5, -250, 1, 0)
TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {Position = UDim2.new(0.5, -250, 0.5, -150)}):Play()
