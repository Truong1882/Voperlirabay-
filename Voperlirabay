-- Lirabay UI v1.0 (Custom Wind-Style)
-- Author: Truong1882 (Generated by ChatGPT)
-- Features: Intro, Sidebar Tabs, Reload Button, Dark Theme, Animation
-- Usage: upload to GitHub and load with loadstring(game:HttpGet("<raw link>"))()

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LirabayUI"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- THEME SETTINGS
local THEME = {
    Primary = Color3.fromRGB(25, 27, 30),
    Secondary = Color3.fromRGB(36, 38, 41),
    Accent = Color3.fromRGB(0, 153, 255),
    Text = Color3.fromRGB(240,240,240)
}

local UI_SCALE = 0.85
local TAB_WIDTH = 60
local TWEEN_TIME = 0.25

local tabs = {
    {id="home", label="Home", icon="üè†"},
    {id="scripts", label="Scripts", icon="üìú"},
    {id="settings", label="Settings", icon="‚öôÔ∏è"}
}

-- Root Frame
local root = Instance.new("Frame")
root.Size = UDim2.new(0, 500, 0, 320)
root.Position = UDim2.new(0.5, -250, 0.5, -160)
root.BackgroundColor3 = THEME.Primary
root.BorderSizePixel = 0
root.Parent = screenGui
root.Active = true
root.Draggable = true

local corner = Instance.new("UICorner", root)
corner.CornerRadius = UDim.new(0,12)

-- Sidebar
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, TAB_WIDTH, 1, 0)
sidebar.BackgroundColor3 = THEME.Secondary
sidebar.Parent = root
Instance.new("UICorner", sidebar).CornerRadius = UDim.new(0,10)

local tabLayout = Instance.new("UIListLayout", sidebar)
tabLayout.SortOrder = Enum.SortOrder.LayoutOrder
tabLayout.Padding = UDim.new(0,8)
tabLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
tabLayout.VerticalAlignment = Enum.VerticalAlignment.Top

local topSpace = Instance.new("Frame")
topSpace.Size = UDim2.new(1,0,0,10)
topSpace.BackgroundTransparency = 1
topSpace.Parent = sidebar

-- Content Frame
local content = Instance.new("Frame")
content.Size = UDim2.new(1, -TAB_WIDTH, 1, 0)
content.Position = UDim2.new(0, TAB_WIDTH, 0, 0)
content.BackgroundTransparency = 1
content.Parent = root

local pages = Instance.new("Folder", content)
pages.Name = "Pages"

local selectedTab = nil

-- Function: select tab
local function selectTab(tabBtn, page)
    if selectedTab == tabBtn then return end
    if selectedTab then
        TweenService:Create(selectedTab, TweenInfo.new(TWEEN_TIME), {BackgroundColor3 = THEME.Secondary}):Play()
    end
    selectedTab = tabBtn
    TweenService:Create(tabBtn, TweenInfo.new(TWEEN_TIME), {BackgroundColor3 = THEME.Accent}):Play()

    for _,p in pairs(pages:GetChildren()) do
        if p == page then
            p.Visible = true
            p.Position = UDim2.new(1,0,0,0)
            TweenService:Create(p, TweenInfo.new(TWEEN_TIME), {Position = UDim2.new(0,0,0,0)}):Play()
        else
            TweenService:Create(p, TweenInfo.new(TWEEN_TIME), {Position = UDim2.new(-1,0,0,0)}):Play()
            task.delay(TWEEN_TIME,function() p.Visible=false end)
        end
    end
end

-- Build Tabs
for i,info in ipairs(tabs) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1,-10,0,50)
    btn.BackgroundColor3 = THEME.Secondary
    btn.Text = info.icon
    btn.TextColor3 = THEME.Text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 22
    btn.Parent = sidebar
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,8)

    local page = Instance.new("Frame")
    page.Size = UDim2.new(1,0,1,0)
    page.Position = UDim2.new(0,0,0,0)
    page.BackgroundColor3 = THEME.Primary
    page.Visible = false
    page.Parent = pages

    -- Title in page
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, -20, 0, 40)
    title.Position = UDim2.new(0,10,0,10)
    title.BackgroundTransparency = 1
    title.Text = info.label
    title.TextColor3 = THEME.Text
    title.Font = Enum.Font.GothamBold
    title.TextSize = 20
    title.Parent = page

    btn.MouseButton1Click:Connect(function()
        selectTab(btn, page)
    end)

    if i == 1 then
        selectTab(btn, page)
    end
end

-- Reload Button
local reloadBtn = Instance.new("TextButton")
reloadBtn.Size = UDim2.new(0,100,0,28)
reloadBtn.Position = UDim2.new(1,-110,1,-38)
reloadBtn.BackgroundColor3 = THEME.Accent
reloadBtn.Text = "Reload UI"
reloadBtn.TextColor3 = Color3.new(1,1,1)
reloadBtn.Font = Enum.Font.GothamBold
reloadBtn.TextSize = 14
reloadBtn.Parent = root
Instance.new("UICorner", reloadBtn).CornerRadius = UDim.new(0,6)

reloadBtn.MouseButton1Click:Connect(function()
    screenGui:Destroy()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/<username>/<repo>/main/LirabayUI.lua"))()
end)

-- Intro Screen
local intro = Instance.new("Frame")
intro.Size = UDim2.new(1,0,1,0)
intro.BackgroundColor3 = THEME.Primary
intro.ZIndex = 10
intro.Parent = screenGui

local logo = Instance.new("TextLabel")
logo.AnchorPoint = Vector2.new(0.5,0.5)
logo.Position = UDim2.new(0.5,0,0.5,0)
logo.Size = UDim2.new(0,0,0,0)
logo.Text = "Lirabay"
logo.Font = Enum.Font.GothamBlack
logo.TextSize = 40
logo.TextColor3 = THEME.Accent
logo.BackgroundTransparency = 1
logo.Parent = intro

TweenService:Create(logo,TweenInfo.new(0.8,Enum.EasingStyle.Back,Enum.EasingDirection.Out),{Size=UDim2.new(0,220,0,50)}):Play()
task.wait(1.3)
TweenService:Create(intro,TweenInfo.new(0.6),{BackgroundTransparency=1}):Play()
TweenService:Create(logo,TweenInfo.new(0.6),{TextTransparency=1}):Play()
task.wait(0.6)
intro:Destroy()

print("[Lirabay UI] Loaded successfully.")
